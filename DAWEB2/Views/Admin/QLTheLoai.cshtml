@*@model DAWEB2.Models.TheLoai*@
@model IEnumerable<DAWEB2.Models.TheLoai>
@{
    ViewBag.Title = "QLTheLoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<section id="main" class="column">
    <article class="module width_3_quarter">
        <header>
            <h3 class="tabs_involved">Danh sách thể loại</h3>
            <ul class="tabs">
            </ul>
        </header>
        <div class="tab_container">
            <div id="tab1" class="tab_content">
                <table class="tablesorter" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên thể loại</th>
                            <th>Hình ảnh đại diện</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                        { 
                        <tr>
                            <td>@Html.DisplayFor(model => item.TenTheLoai)</td>
                            <td><img src="@Url.Content("~/TemplateMau/images/" + item.AnhHien)"  style="height:200px;width:200px"/></td>
                            <td>
                                <a href='@Url.Action("EditTheLoai", new { id = item.idTheLoai })'>
                                    <img src='@Url.Content("~/HTML5 Admin Template/images/icn_edit.png")' title="Sửa" />
                                </a>
                                    <a href='@Url.Action("DeleteTheLoai", new { id = item.idTheLoai })'>
                                        <img src='@Url.Content("~/HTML5 Admin Template/images/icn_trash.png")'title="Xóa" />
                                    </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div><!-- end of #tab1 -->


        </div><!-- end of .tab_container -->

    </article><!-- end of content manager article -->


    <div class="clear"></div>

    @Html.Action("ThemMoiTheLoai", "Admin")

    <div class="spacer"></div>
</section>
 }