@model IEnumerable<DAWEB2.Models.PhanQuyen>
@{
    ViewBag.Title = "PQuyen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <section id="main" class="column">
        <article class="module width_3_quarter">
            <header>
                <h3 class="tabs_involved">Phân quyền</h3>
                <ul class="tabs"></ul>
            </header>
            <div class="tab_container">
                <div id="tab1" class="tab_content">
                    <table class="tablesorter" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên trang web</th>
                                <th>Mô tả</th>
                                <th>Được phép</th>
                                <th>Chỉnh sửa quyền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="color:#0026ff;font-size:15px;">@Html.DisplayFor(modelItem => item.TrangWeb.TenTW)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TrangWeb.MoTa)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DuocPhep)</td>
                                    <td>
                                        <a href='@Url.Action("SuaQuyen", new { id = item.MaPQ })'>
                                            <img src='@Url.Content("~/HTML5 Admin Template/images/icn_edit.png")' title="Sửa" />
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- end of #tab1 -->
            </div><!-- end of .tab_container -->
        </article><!-- end of content manager article -->
        <div class="clear"></div>
        <div class="spacer"></div>
    </section>
}
