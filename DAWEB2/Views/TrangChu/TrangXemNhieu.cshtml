
@{
    ViewBag.Title = "TrangXemNhieu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "TrangTheloai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:-80px">
    <div class="banner-bottom">
        <div class="container">

            <div class="news">
                <div class="news-grids">
                    <div class="col-md-8 news-grid-left">
                        <h3>Tin được xem nhiều</h3>
                        <ul>
                            @foreach (var tin in Model)
                            {
                                <li>
                                    <div class="news-grid-left1">
                                        <img src="~/TemplateMau/images/@tin.urlHinh" alt="" class="img-responsive" />
                                    </div>
                                    <div class="news-grid-right1">
                                        <h4><a href="@Url.Action("CTTin","TrangChu",new { id = tin.idTin})">@tin.TieuDe</a></h4>
                                        <h5>Tác giả <a href="#">@tin.User.HoTen</a> <label>|</label> <i>@tin.Ngay</i></h5>
                                        <p>@tin.TomTat</p>
                                    </div>
                                    <div class="clearfix"> </div>
                                </li>
                            }
                        </ul>
                        <div>
                        </div>
                    </div>
                    <div class="col-md-4 news-grid-right">
                        <div class="video-grids"  style="margin-top:-0px;">
                            <div class="video-grids-right">
                                <div class="sap_tabs">
                                    <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                                        <ul class="resp-tabs-list">
                                            <li class="resp-tab-item grid1 resp-tab-active" aria-controls="tab_item-0" role="tab"><span>Tin nổi bật</span></li>
                                            <div class="clear"></div>
                                        </ul>
                                        <div class="resp-tabs-container" >
                                            <h2 class="resp-accordion resp-tab-active" role="tab" aria-controls="tab_item-0"><span class="resp-arrow"></span>most shared</h2><div class="tab-1 resp-tab-content resp-tab-content-active" aria-labelledby="tab_item-0" style="display:block">
                                                <div class="facts">
                                                    @Html.Action("PTVTinNoiBat", "TrangChu")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



